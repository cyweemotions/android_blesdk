<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>
                <Button
                    android:id="@+id/btn_query_auth_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="queryAuthState"
                    android:tag="查询鉴权状态"
                    android:text="查询鉴权状态" />
                <Button
                    android:id="@+id/btn_set_bind_auth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="bindAuth"
                    android:tag="绑定鉴权"
                    android:text="绑定鉴权" />
            </TableRow>
            <TableRow>

                <Button
                    android:id="@+id/btn_sync_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="TimeAlign"
                    android:tag="时间校准"
                    android:text="时间校准" />
