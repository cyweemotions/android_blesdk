                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="syncBloodOxygen"
                    android:tag="血氧同步"
                    android:text="血氧同步" />
            </TableRow>
            <TableRow>
                <Button
                    android:id="@+id/btn_sync_sleep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="syncSleep"
                    android:tag="睡眠同步"
                    android:text="睡眠同步" />
                <Button
                    android:id="@+id/btn_sync_sport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="syncSport"
                    android:tag="运动同步"
                    android:text="运动同步" />
            </TableRow>
            <TableRow>
                <Button
                    android:id="@+id/btn_sync_PAI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="syncPAI"
                    android:tag="PAI同步"
                    android:text="PAI同步" />
                <Button
                    android:id="@+id/btn_sync_pressure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="syncPressure"
                    android:tag="压力同步"
                    android:text="压力同步" />
            </TableRow>
            <TableRow>
                <Button
                    android:id="@+id/btn_sync_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="syncTemperature"
                    android:tag="体温同步"
                    android:text="体温同步" />
            </TableRow>

